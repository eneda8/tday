<% layout("layouts/boilerplate")%>

<div class="container mt-4 " style="padding-bottom: 45vh; padding-top: 20vh; overflow-y: hidden;">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-5 offset-xl-3 ">
            <div class="card border-0 shadow mb-3 bg-light">
                <div class="card-body">
                    <h5 class="card-title my-3 text-center">Forgot your password?</h5>
                    <p class="text-center">Enter your email here to receive a link to reset your password:</p>
                    <form action="/forgot-password?_method=PUT" method="POST" class="validated-form" novalidate>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text border-0" for="email"><i class="fas fa-envelope text-primary"></i></label>
                            </div>
                            <input class="form-control border-0" type="email" id="email" name="email" placeholder ="Email" required autofocus>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter a valid email.</div>
                         </div>
                        <button class="btn btn-warning btn-block">Reset Password</button>
                    </form>
                </div> 
            </div> 
        </div> 
    </div> 
</div> 