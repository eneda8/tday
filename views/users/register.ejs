<% layout("layouts/boilerplate")%>

<div class="container d-flex justify-content-center align-items-center mb-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <div class="card-body">
                    <img src="https://images.unsplash.com/photo-1557426575-6e9ea75ef57a?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" class="card-img-top" alt="">
                    <h5 class="mt-3">Register</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="displayName">Display Name</label>
                            <input class="form-control" type="text" id="displayName" name="displayName" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="birthday">Birthday</label>
                            <input class="form-control" type="date" id="birthday" name="birthday" min="1900-01-01" max="2001-01-01">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                You must be 10 years old to register.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="gender">Gender</label>
                            <select class="custom-select" id="gender" name="gender" required>
                                <option selected value="">--Please choose an option--</option>
                                <option value="male">male</option>   
                                <option value="female">female</option>          
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="country[name]">Country</label>
                            <select class="custom-select" id="countryName" name="country[name]" required>
                                <option selected value="">--Please choose an option--</option> 
                                <%  for (let country of countries) { %>
                                    <option value="<%=country["name"]%>"><%=country["name"]%></option>
                                <%}%>        
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3 collapse">
                            <label class="form-label" for="country[flag]">Flag</label>
                            <select class="custom-select" id="flag" name="country[flag]">
                                <%  for (let country of countries) { %>
                                    <option value="<%=country["flag"]%>"><%=country["flag"]%></option>
                                <%}%>        
                            </select>
                        </div>
                        <p>Profile photo:</p>
                        <div class="custom-file mb-3">
                            <input type="file" class="custom-file-input" id="avatar" name="avatar" onchange="document.getElementById('preview').src = window.URL.createObjectURL(this.files[0])">
                            <label class="custom-file-label" for="avatar">Choose an image...</label>
                        </div>
                        <img class="img-fluid my-2" id="preview" width="100px"/> 
                        <button class="btn btn-success btn-block">Register</button>
                        <p class="text-center mt-3">Already registered? <a href="/login">Login</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const countrySelect = document.querySelector("#countryName");
    const flagSelect = document.querySelector("#flag");
    countrySelect.addEventListener("change", (e) => {
        let choice = e.target.value;
        let selectedCountry = countries.filter(obj => Object.values(obj).includes(choice));
        let flagFile = selectedCountry[0]["flag"];
        flagSelect.value = flagFile; 
    })
</script>
