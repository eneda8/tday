<% layout("layouts/boilerplate")%>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-2 col-xl-6 offset-xl-3">
            <div class="card border-0 shadow-lg mb-3">
                <div class="card-body">
                    <div class="jumbotron jumbotron-fluid pt-3 pb-2 mb-2">
                        <div class="container">
                            <p class="lead text-center">Join the world's first collective online journal</p>
                            <h1 class="display-4 text-center text-warning font-weight-bold logo">t'day</h1>
                        </div>
                    </div>
                    <form action="/register" method="POST" class="validated-form " novalidate enctype="multipart/form-data">
                        <p class="my-0 font-weight-bold">Account Information</p>
                        <small id="" class="text-muted mt-0">
                            t'day encourages anonymity. - Please don't use your real name (and no selfies!)
                        </small>
                        <hr class="my-1">
                        <div class="form-row mt-3">
                            <div class="col-md-6">
                                <label class="form-label mb-0" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" placeholder ="@" required>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter a username.</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label mb-0" for="displayName">Display Name</label>
                                <input class="form-control" type="text" id="displayName" name="displayName" required>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter a display name.</div>
                            </div>
                        </div>
                        <div class="form-row mt-3">
                            <div class="col-md-6">
                                <label class="form-label mb-0" for="email">Email</label>
                                <input class="form-control" type="email" id="email" name="email" required>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter a valid email.</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label mb-0" for="password">Password  <i class="fas fa-info-circle text-primary" data-toggle="tooltip" data-placement="bottom" title="Must be 8-20 characters. Must contain at least one number, one uppercase letter, and one special character."></i></label>
                                <input class="form-control" type="password" id="password" name="password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,20}$" required >
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter a valid password.</div>
                            </div>
                        </div>
                        <div class="mt-3">
                            <p class="mb-0">Avatar</p>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="avatar" name="avatar" onchange="document.getElementById('preview').src = window.URL.createObjectURL(this.files[0])">
                            <label class="custom-file-label" for="avatar">Choose an image...</label>
                        </div>
                        <img class="img-fluid my-2" id="preview" width="100px"/> 
                        </div>
                        <p class="my-0 font-weight-bold">Demographic Information <i class="fas fa-info-circle text-primary" data-toggle="tooltip" data-placement="bottom" title="We collect this information for data aggregation purposes only (e.g. our daily average rating charts). Your birth year and gender are always private and cannot be changed after you sign up.  "></i></p>
                        <hr class="my-1 py-0">
                        <div class="form-row mt-3">
                            <div class=" col-md-6">
                                <label class="form-label mb-0" for="ageGroup">Age Group</label>
                                <select name="ageGroup" id="ageGroup" class="custom-select">
                                    <option selected value="">─Please select an option─</option>
                                    <option value="Greatest Generation">Greatest Generation (1901-1927)</option>
                                    <option value="Silent Generation">Silent Generation (1928-1945)</option>
                                    <option value="Baby Boomers">Baby Boomers (1946-1964)</option>
                                    <option value="Gen X">Gen X (1965-1980)</option>
                                    <option value="Millennials">Millennials (1981-1996)</option>
                                    <option value="Gen Z">Gen Z (1997-2012)</option>
                                </select>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please select a valid option.</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label mb-0" for="gender">Gender</label>
                                <select class="custom-select" id="gender" name="gender" required>
                                    <option selected value="">─Please select an option─</option>
                                    <option value="male">male</option>   
                                    <option value="female">female</option>          
                                </select>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please select a valid option.</div>
                            </div>
                        </div>
                        <div class="mt-3 mb-3">
                            <label class="form-label mb-0" for="country[name]">Country</label>
                            <select class="custom-select" id="countryName" name="country[name]" required>
                                <option value="">─Please select an option─</option> 
                                <%  for (let country of countries) { %>
                                    <option value="<%=country["name"]%>"><%=country["name"]%></option>
                                <%}%>        
                            </select>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please select a valid option</div>
                        </div>
                        <button class="btn btn-warning btn-block">Sign Up</button>
                        <p class="text-center mt-3 mb-0">Already registered? <a href="/login">Login</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
  
