<% layout("layouts/boilerplate")%>
<div class="container mt-5 overflow-hidden" style="line-height:20px; padding-bottom: 10vh; padding-top:20px;">
    <div class="row">
        <div class="col-md-6 offset-md-2 col-xl-6 offset-xl-3">
            <div class="card border-0 shadow mb-3 bg-light">
                <div class="card-body">
                    <div class="jumbotron jumbotron-fluid pt-3 pb-2 mb-2 bg-white">
                        <div class="container">
                            <p class="lead text-center mb-0">Join the world's first collective online journal</p>
                            <p class="text-warning text-center my-0">──────<span>★</span>──────</p>

                            <h1 class="display-4 text-center text-warning font-weight-bold logo">t'day</h1>
                        </div>
                    </div>
                    <form action="/register" method="POST" class="validated-form " novalidate enctype="multipart/form-data">
                        <p class="my-0 font-weight-bold">Account Information</p>
                        <small id="" class="text-muted mt-0">
                            t'day encourages anonymity. - Please don't use your real name (and no selfies!)
                        </small>
                        <hr class="my-1">
                        <div class="form-row mt-3">
                            <div class="col-md-6 input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text border-0"><i class="fas fa-at text-primary"></i></span>
                                </div>
                                <input class="form-control border-0" type="text" id="username" name="username" placeholder ="Username" required>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter a username.</div>
                            </div>
                            <div class="col-md-6 input-group">
                                <div class="input-group-prepend">
                                    <label for="displayName" class="input-group-text border-0"><i class="fas fa-user text-primary"></i></label>
                                </div>
                                <input class="form-control border-0" type="text" id="displayName" name="displayName" placeholder = "Display Name" required>

                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter a display name.</div>
                            </div>
                        </div>
                        <div class="form-row mt-3">
                            <div class="col-md-6 input-group">
                                <div class="input-group-prepend">
                                    <label class="input-group-text border-0" for="email"><i class="fas fa-envelope text-primary"></i></label>
                                </div>
                                <input class="form-control border-0" type="email" id="email" name="email" placeholder ="Email" required>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter a valid email.</div>
                            </div>
                            <div class="col-md-6 input-group">
                                <div class="input-group-prepend">
                                    <label class="input-group-text border-0" for="password"><i class="fas fa-key text-primary" data-toggle="tooltip" data-placement="bottom" title="Must be 8-20 characters. Must contain at least one number, one uppercase letter, and one special character."></i>
                                    </label>
                                </div>
                                <input class="form-control border-0" type="password" id="password" name="password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,20}$" placeholder="Password" required >
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter a valid password.</div>
                            </div>
                        </div>
                        <div class="mt-3 input-group">
                            <div class="input-group-prepend">
                                <label class="input-group-text border-0" for="avatar"><i class="fas fa-file-image text-primary"></i></label>
                            </div>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="avatar" name="avatar" onchange="document.getElementById('preview').src = window.URL.createObjectURL(this.files[0])">
                                <label class="custom-file-label border-0" for="avatar">Avatar (Profile Photo)</label>
                            </div>
                        </div>
                        <img class="img-fluid my-2" id="preview" width="100px"> 
                        <p class="my-0 font-weight-bold">Demographic Information <i class="fas fa-info-circle text-info small" data-toggle="tooltip" data-placement="bottom" title="We collect this information for data aggregation purposes (e.g. our average rating charts). Your country is displayed on your profile. Age group and gender are private."></i></p>
                        <hr class="my-1 py-0">
                        <div class="form-row mt-3">
                            <div class="col-md-6 input-group">
                                <label class="input-group-text border-0" for="ageGroup"><i class="fas fa-birthday-cake text-primary"></i></label>
                                <select name="ageGroup" id="ageGroup" class="custom-select border-0">
                                    <option selected value="">Age Group</option>
                                    <option value="Greatest Generation">Greatest Generation (1901-1927)</option>
                                    <option value="Silent Generation">Silent Generation (1928-1945)</option>
                                    <option value="Baby Boomers">Baby Boomers (1946-1964)</option>
                                    <option value="Gen X">Gen X (1965-1980)</option>
                                    <option value="Millennials">Millennials (1981-1996)</option>
                                    <option value="Gen Z">Gen Z (1997-2012)</option>
                                </select>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please select a valid option.</div>
                            </div>
                            <div class="col-md-6 input-group">
                                <label class="input-group-text border-0" for="gender"><i class="fas fa-venus-mars text-primary"></i></label>
                                <select class="custom-select border-0" id="gender" name="gender" required>
                                    <option selected value="">Gender</option>
                                    <option value="male">male</option>   
                                    <option value="female">female</option>          
                                </select>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please select a valid option.</div>
                            </div>
                        </div>
                        <div class="mt-3 mb-3 input-group">
                            <label class="input-group-text border-0" for="country[name]"><i class="fas fa-globe-americas text-primary"></i></label>
                            <select class="custom-select border-0" id="countryName" name="country[name]" required>
                                <option value="">Country</option> 
                                <%  for (let country of countries) { %>
                                    <option value="<%=country["name"]%>"><%=country["name"]%></option>
                                <%}%>        
                            </select>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please select a valid option</div>
                        </div>
                        <button class="btn btn-warning btn-block">Sign Up</button>
                        <p class="text-center mt-3 mb-0">Already registered? <a href="/login">Login</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
  
