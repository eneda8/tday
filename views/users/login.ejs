<% layout("layouts/boilerplate")%>
    <div class="container justify-content-start">
        <div class="row justify-content-center align-items-center">
            <div class="col-xs-12 col-md-9 col-lg-4 card border-0 shadow bg-light">
                <div class="card-body">
                    <img src="/images/login.jpg" class="card-img-top" alt="">
                    <h5 class="card-title my-3 text-center">Login to <span
                            class="logo font-weight-bold text-warning">t'day</span></h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-4 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text border-0"><i class="fas fa-at text-primary"></i></span>
                            </div>
                            <input class="form-control border-0" type="text" id="username" name="username"
                                placeholder="Username" required>
                            <div class="invalid-feedback">Please provide a valid username.</div>
                        </div>
                        <div class="mb-4 input-group">
                            <div class="input-group-prepend">
                                <label class="input-group-text border-0" for="password"><i
                                        class="fas fa-key text-primary" data-toggle="tooltip" data-placement="bottom"
                                        title="Must be 8-20 characters. Must contain at least one number, one uppercase letter, and one special character."></i>
                                </label>
                            </div>
                            <input class="form-control border-0" type="password" id="password" name="password"
                                placeholder="Password" required>
                            <!-- add this in pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,10}$" -->
                            <div class="invalid-feedback">Please provide a valid password.</div>
                        </div>
                        <input id="tz" type="text" hidden value="" name="timezone">
                        <button class="btn btn-warning btn-block">Login</button>
                        <div class="mt-3 text-center">
                            <a href="/forgot-password">Forgot password?</a> <span> | </span> <a
                                href="/register">Register</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <footer class="pt-4 px-2 mb-0 mt-1 d-flex justify-content-between small fixed-bottom">
            <div class="d-none d-lg-block">
                <a class="d-inline" href="#">About</a> <span class="small">|</span>
                <a class="d-inline" href="/privacy">Privacy Policy</a> <span class="small">|</span>
                <a class="d-inline" href="/terms">Terms of Use</a> <span class="small">|</span>
                <a class="d-inline" href="/cookies">Cookie Policy</a> <span class="small">|</span>
                <a class="d-inline" href="/contact">Contact</a>
            </div>
            <div class="text-right d-none d-lg-block">
                <p class="mb-0 d-inline">Â© 2022 t'day |</p>
                <p class="d-inline">made with <i class="fas fa-heart text-danger"></i> by <a
                        href="https://github.com/eneda8">eneda</a></p>
            </div>
        </footer>
    </div>