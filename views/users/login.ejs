<% layout("layouts/boilerplate")%>
<div class="container d-flex justify-content-center align-items-center mt-4">
    <div class="row mb-0 mt-5">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 mb-0 mt-5">
            <div class="card border-0 shadow-lg mb-0">
                <div class="card-body">
                    <img src="/images/login.jpg" class="card-img-top" alt="">
                    <h5 class="card-title mt-4 mb-4 text-center">Login to todei</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-4">
                            <label class="sr-only" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" placeholder ="Username" required>
                            <div class="invalid-feedback">Please provide a valid username.</div>
                        </div>
                        <div class="mb-4">
                            <label class="sr-only" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" placeholder ="Password" 
                            required>
                <!-- add this in pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,10}$" -->
                            <div class="invalid-feedback">Please provide a valid password.</div>
                        </div>
                        <button class="btn btn-warning btn-block">Login</button>
                        <div class="mt-3 text-center">
                            <a href="#">Forgot password?</a> <span> | </span> <a href="/register">Register</a>
                        </div>
                    </form>
                </div> 
            </div> 
        </div> 
    </div> 
</div> 

<style>
    body{
        overflow-y: hidden;
    }
</style>