<% layout("layouts/boilerplate")%>
    <div class="container mt-5 overflow-hidden">
        <div class="card shadow border-0">
            <div class="card-body">
                <h3 class="my-0 mx-0 font-weight-bold px-3 pt-3 bg-light w-100">Contact <span
                        class="logo text-warning mr-2">t'day</span> </h3>
                <h6 class="mt-0 mx-0 px-3 pb-3 pt-2 bg-light w-100">We'd love to hear from you! <i
                        class="fas fa-heart text-danger"></i></h6>
                <div class="bg-white px-3 pb-3">
                    <form action="/contact" method="POST" class="validated-form" novalidate>
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" name="email" placeholder="yourname@email.com"
                                required>
                            <div class="valid-feedback"></div>
                            <div class="invalid-feedback">Please enter a valid email.</div>
                        </div>
                        <div class="form-group">
                            <label for="subject">Subject</label>
                            <select name="subject" id="" class="form-control" required>
                                <option value="">Please Select An Option</option>
                                <option value="Account Question">Account Question</option>
                                <option value="Technical Support">Technical Support</option>
                                <option value="Feedback">Feedback</option>
                                <option value="Business Inquiry">Business Inquiry</option>
                                <option value="Privacy Inquiry">Privacy Question</option>
                                <option value="Other">Other</option>
                            </select>
                            <div class="valid-feedback"></div>
                            <div class="invalid-feedback">Please select a valid option.</div>
                        </div>
                        <div class="form-group">
                            <label for="message" class="">Message</label>
                            <textarea name="message" id="" cols="30" rows="10" class="form-control" required></textarea>
                            <div class="valid-feedback"></div>
                            <div class="invalid-feedback">Please enter a valid message.</div>
                        </div>
                        <!-- <button class="btn btn-warning btn-block" type="submit">
                        Send
                        <i class="fas fa-paper-plane text-light"></i>
                    </button> -->
                        <a class="btn btn-warning px-5 mr-2" href="" role="button">Send <i
                                class="fas fa-paper-plane text-light"></i>
                        </a>

                    </form>
                </div>
            </div>
        </div>
        <footer class="pt-4 px-2 mb-0 mt-1 d-flex justify-content-between small">
            <div class="">
                <a class="d-inline" href="#">About</a> <span class="small">|</span>
                <a class="d-inline" href="/privacy">Privacy Policy</a> <span class="small">|</span>
                <a class="d-inline" href="/terms">Terms of Use</a> <span class="small">|</span>
                <a class="d-inline" href="/cookies">Cookie Policy</a> <span class="small"></span>
            </div>
            <div class="text-right">
                <p class="mb-0 d-inline">© 2022 t'day |</p>
                <p class="d-inline">made with <i class="fas fa-heart text-danger"></i> by <a
                        href="https://github.com/eneda8">eneda</a></p>
            </div>
        </footer>
    </div>



