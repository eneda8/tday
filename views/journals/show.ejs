<% layout("layouts/boilerplate")%>
<% if(journal.title) {%> 
  <h6 class="text-muted text-center text-monospace font-weight-bold"><%=journal.title%></h6>
  <% } %> 
<h6 class="text-muted text-center text-monospace" title="<%=new Date(journal.createdAt).toLocaleString({timeZone: currentUser.timezone})%>"><%=journal.date%></h6>
<% if(journal.updatedAt) { %>
<small class="text-muted text-center text-monospace">Edited: <%=new Date(journal.updatedAt).toLocaleString({timeZone: currentUser.timezone})</small>
<% } %> 
<div class="paper text-wrap" spellcheck="false">
        <textarea  id="journalBody" autofocus="autofocus" class="text-monospace text-wrap pr-1 py-1 ml-0 border-0" rows="50" cols="100" name="journal[body]"  style="white-space: pre-line;"><%=journal.body%></textarea>
      <a class="btn btn-sm btn-primary my-3" href="/write/<%=journal._id%>/edit" role="button">Edit</a>
      <button type="button" class="btn btn-sm btn-danger my-3" data-toggle="modal" data-target="#deleteModal">
        Delete
      </button>      
  </div>
<%- include("../partials/confirmDeleteModals/journal")%>