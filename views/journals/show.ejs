<% layout("layouts/boilerplate")%>
<div class="container mb-3 px-0">
  <div class="text-center mb-2">
    <% if(journal.title) {%> 
      <h6 class="text-center text-monospace font-weight-bold"><%=journal.title%></h6>
    <% } %> 
    <h6 class="text-center text-monospace edited" title="<%=journal.createdAt%>"><%=journal.date%></h6>
    <% if(journal.updatedAt) { %>
    <small class="text-muted text-center text-monospace d-block">Edited: <span class="timestamp"><%=journal.updatedAt%></span></small>
    <% } %> 
  </div>
  <div class="container mb-1 px-0 text-wrap">
    <div class="row h-100 p-0 mx-2 mx-lg-5 d-flex justify-content-center">
      <div class="col paper mb-3 h-100 text-wrap" spellcheck="false">
        <div>
          <textarea id="journalBody" rows="50" cols="100" class="text-monospace pr-2 py-0 ml-0 border-0 text-wrap text-break h-100 mb-3" name="journal[body]" readonly style="white-space: pre-wrap;"><%=journal.body%></textarea>
          <a class="btn btn-sm btn-warning mb-2" href="/write/<%=journal._id%>/edit" role="button">Edit</a>
          <button type="button" class="btn btn-sm btn-danger mb-2" data-toggle="modal" data-target="#deleteModal">
          Delete
          </button> 
        </div>
    </div>
  </div>
</div>

<%- include("../partials/confirmDeleteModals/journal")%>