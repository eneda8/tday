<% layout("layouts/boilerplate")%>
<div class="mainContainer d-flex justify-content-center container-fluid w-100 px-0">
    <div class="row mx-lg-5 w-100 d-flex justify-content-center px-0">
        <div class="col-3 px-0 mt-lg-3 d-none d-md-block">
            <h3 class="font-weight-bold mb-2" style="font-size: 1.7rem">Search</h3>
            <%- include("../partials/search/searchFilter") %>
        </div>
        <div class="col flex-grow-1 mx-lg-3 bg-light mt-lg-3 px-3 shadow-sm rounded" id="searchResults">
            <% if( posts && posts.docs){ %>
                <div class="d-flex justify-content-between">
                    <h5 class="text-left mt-3 mb-0">Results</h5>
                    <a href="#" class="small pt-3" onclick="myHilitor.remove(); this.classList.add('d-none')">Clear highlighting</a>
                </div>
                <span class="small text-muted mt-0"><%=docsFound %> ratings found </span> 
                <% if(query.rating || query.country) { %> 
                    <small class="text-muted d-block">Showing 
                        <% if(query.rating) { %> 
                            [<%=query.rating%>] star
                        <% } %> ratings
                            <% if(query.country) {%> 
                             from <%=query.country%>
                             <% } %> 
                            </small>
                    <% } %> 
                <nav class="mt-3 overflow-auto" aria-label="page navigation">
                <%- include("../partials/search/paginate")%>
                </nav>
                <%for (post of posts.docs) { %> 
                <%- include("../partials/posts")%>
                <% } %> 
                <nav class="mt-3" aria-label="page navigation">
                <%- include("../partials/search/paginate")%>
                </nav>
            <% } else { %>
                <h5 class="text-left mt-3 mb-0">Results</h5>
                <span class="small text-muted mt-0">0 ratings found </span> 
                <p class="text-left mt-4">Submit the search form to find ratings.</p>
            <% } %>
        </div>
        <div class="col-3 mt-lg-3 px-0 mx-xs-2 d-none d-lg-block">
            <%- include("../partials/rightSidebar") %>
        </div>
    </div>
</div>  

