<% layout("layouts/boilerplate")%>

<h5 class="text-left">All Posts</h5>
<div>
    <a href="/posts/new">Add Post</a>
</div>
<div class="container">
    <div class="row row-cols-auto bg-transparent">
        <%for (post of posts) { %> 
            <div class="col">
                <div class="card mb-3" style="width: 18rem;">
                    <div class="card-body">
                        <p class="card-title fs-5"><%=post.date%>: <%=post.rating%> 
                        <p class="card-subtitle mb-1 text-muted"><%=post.author.username%></p>
                        <p class="card-text mb-1"><%=post.body%></p>
                        <a href="/posts/<%=post._id%>" class="card-link">Read more</a>
                        <a href="/u/<%=post.author.username%>" class="card-link">Visit profile</a>
                    </div>
                </div>
            </div>
        <% } %> 
    </div>
</div>
