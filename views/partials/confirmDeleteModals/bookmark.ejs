<div class="modal fade" id="bookmarkDeleteModal-<%=post._id%>" tabindex="-1" aria-labelledby="bookmarkDeleteModalLabel-<%=post._id%>" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
            <div class="d-flex justify-content-end pr-2 pb-0 mb-0">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-header border-0 pb-1 pt-0">
                <h6 class="modal-title font-weight-bold" id="bookmarkDeleteModalLabel-<%=post._id%>">Remove bookmark?</h6>
            </div>
            <div class="modal-footer pt-1 border-0">
                <button type="button" class="btn btn-sm btn-warning" data-dismiss="modal">Cancel</button>
                <form class="d-inline" action="/posts/<%=post._id%>/bookmark?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                </form>
            </div>
        </div>
    </div>
</div>