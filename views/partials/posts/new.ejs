<div class="modal fade" id="newPostModal" tabindex="-1" aria-labelledby="newPostModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content bg-light p-3">
        <div class="modal-header pb-0">
          <h6 class="modal-title font-weight-bold" id="newPostModalLabel">New Rating</h6>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body pb-0">
          <form action="/posts" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <h6 class=" mb-0">How's your <span id="day">day</span>?</h6>
            <div>
              <fieldset class="rating">
                <input type="radio" id="star5" name="post[rating]" value=5 required/><label class = "mb-0" for="star5" title="Amazing"></label>
                <input type="radio" id="star4" name="post[rating]" value=4 required/><label class = "mb-0" for="star4" title="Very good"></label>
                <input type="radio" id="star3" name="post[rating]" value=3 required/><label class = "mb-0" for="star3" title="Average"></label>
                <input type="radio" id="star2" name="post[rating]" value=2 required/><label class = "mb-0" for="star2" title="Not good"></label>
                <input type="radio" id="star1" name="post[rating]" value=1 required/><label class = "mb-0" for="star1" title="Terrible"></label>
              </fieldset>
              <div class="valid-feedback ml-5"></div>
              <div class="invalid-feedback ml-5">This field is required.</div>
            </div>
            <input hidden id="postDate" type="text" name="post[date]" value="">
            <div class="mb-3 mt-0">
                <label class="form-label mt-0" for="body">Jot down your thoughts or post an image:</label>
                <textarea class="form-control border-0" rows="5"cols="10" type="text" name="post[body]"></textarea>
                <div class="valid-feedback"></div>
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="image" name="image" onchange="document.getElementById('preview').src = window.URL.createObjectURL(this.files[0])">
                <label class="custom-file-label border-0" for="image">Choose image...</label>
                <div class="valid-feedback"></div>
            </div>
            <img class="img-fluid my-3" id="preview" width="100px"/> 
            <div class="modal-footer pr-0">
              <button type="button" class="btn btn-dark" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-warning">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.querySelector("#postDate").value = new Date().toLocaleDateString('en-US',{year: 'numeric', month: 'short',day: 'numeric'});
    document.querySelector("#day").innerText = new Date().toLocaleString('en-us', {weekday:'long'});
  </script>