<div class="modal fade" id="editPostModal" tabindex="-1" aria-labelledby="editPostModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content bg-light p-3">
        <div class="modal-header pb-0">
          <h6 class="modal-title font-weight-bold" id="editPostModalLabel">Edit Today's Rating</h6>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body pb-0">
            <form action="/posts/<%=post._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div>
                    <p class="">Current rating: <span class="star star<%=post.rating%>-result"></span></p>
                    <p class="mb-0">New rating:</p>
                    <div>
                        <fieldset class="rating" required>
                            <input type="radio" id="star5-edit" name="post[rating]" value="5" required><label class = "mb-0" for="star5-edit" title="Amazing"></label>
                            <input type="radio" id="star4-edit" name="post[rating]" value="4" required><label class = "mb-0" for="star4-edit" title="Very good"></label>
                            <input type="radio" id="star3-edit" name="post[rating]" value="3" required><label class = "mb-0" for="star3-edit" title="Average"></label>
                            <input type="radio" id="star2-edit" name="post[rating]" value="2" required><label class = "mb-0" for="star2-edit" title="Not good"></label>
                            <input type="radio" id="star1-edit" name="post[rating]" value="1" required><label class = "mb-0" for="star1-edit" title="Terrible"></label>
                        </fieldset>
                        <div class="valid-feedback"></div>
                        <div class="invalid-feedback">This field is required.</div>
                    </div>

                </div>
                <div class="mb-3 mt-0">
                    <label class="form-label mt-0" for="body">Jot down your thoughts or post an image:</label>
                    <textarea class="form-control border-0" rows="5"cols="10" type="text" name="post[body]"><%=post.body%></textarea>
                    <div class="valid-feedback"></div>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="image" name="image" onchange="document.getElementById('preview').src = window.URL.createObjectURL(this.files[0])">
                    <label class="custom-file-label" for="image">Choose image...</label>
                    <div class="valid-feedback"></div>
                    <img class="img-fluid my-2" id="preview" width="100px" src=""> 
                </div>
                <% if(post.image) { %> 
                <div >
                    <label class="d-block" for="deleteImage">Delete Image?</label>
                    <img class="img-fluid" src="<%=post.image.thumbnail%>" alt="">
                    <input class="form-check-input" type="checkbox" name="deleteImage[]" value="<%=post.image.filename%>">
                </div>           
                <% }  %>  
                <div class="modal-footer pr-0">
                    <button type="button" class="btn btn-dark" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Update</button>
                </div>
            </form>
        </div>
    </div>
  </div>
</div>

