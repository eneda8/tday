<div class="tab-pane fade" id="bookmarks" role="tabpanel" aria-labelledby="bookmarks-tab">
    <% if(!user.bookmarks.length) { %>
        <h6 class="text-center my-5">No bookmarks yet!</h6>
    <% } else { for (post of user.bookmarks) { %> 
            <div class="media mb-0 mt-2 mx-4 pl-2 pt-1">
                <img class="img-fluid rounded-circle" src="<%=post.author.avatar.profile%>" alt="" style="width:45px; ">
                <div class="media-body text-wrap">
                    <div class="d-flex justify-content-between mt-1">
                        <p class="card-subtitle mt-1"><strong>Anonymous</strong>  <img class="d-inline" style="width: 17px; transform:translateY(-1px);" src="<%=post.author.country.flag%>" alt="" title="<%=post.author.country.name %>"><small class="text-muted mb-0 d-block">@<%=post.author.username%></small></p>
                        <!-- edit & delete dropdown menu-->
                        <% if(currentUser && post.author.equals(currentUser._id)) { %> 
                            <div class="btn-group dropleft" title="More" >
                              <button class="btn btn-sm text-dark mb-1 pb-1 bg-light rounded-circle" data-toggle="dropdown" style="height: 30px; width: 30px">...</button>
                              <div class="dropdown-menu">
                                <% if(within24Hours(post) === true) { %>
                                <button class="dropdown-item pl-2"><a href="" data-toggle="modal" id="editPostLink" data-target="#editPostModal" class="text-decoration-none"><i class="fas fa-edit text-warning"></i> Edit</a></button>
                                <% } %> 
                                <form class="d-inline" action="/posts/<%=post._id%>?_method=DELETE" method="POST">
                                  <button class="dropdown-item pl-2 text-primary pb-0"><a><i class="fas fa-trash-alt text-danger"></i><span class="text-light">_</span>Delete</a></button>
                                </form>
                              </div>
                            </div>
                            <% } %>
                    </div>
                    <span class="badge badge-light mb-2 mt-2" style="font-size: 13px"><%=post.date%>: <span class="star star<%=post.rating%>-result"></span></span>  
                    <div class="text-wrap">
                        <p class="my-0"><%=post.body%></p>
                    </div>
                    <% if(post.image) { %> 
                        <div class="d-block">
                            <img class="img-fluid" src="<%=post.image.fullsize%>" alt="">
                        </div>
                    <% } %> 
                    <div class="d-flex justify-content-between">
                        <div>
                            <a href="/posts/<%=post._id%>" class="card-link"><small class="pb-1 timestamp" title="<%=post.createdAt%>"><%=post.createdAt%></small></a>
                            <% if(post.edited){ %>
                            <small class="pb-1 text-muted edited" title="<%=post.updatedAt%>">Edited</small>
                            <% } %>
                        </div>
                        <div class="d-flex justify-content-around">
                            <a href="/posts/<%=post._id%>" class="text-decoration-none mr-2 pt-1 pr-1" title="Comments"><span class="text-muted" style="font-size: 13px;"><%=post.comments.length%></span> <i class="fas fa-comments text-primary pt-0"></i></a> 
                            <button class="btn btn-sm btn-link p-0" title="Copy link" onclick="navigator.clipboard.writeText(window.location.origin +'posts/<%=post._id%>')"><i class="fas fa-link text-warning mr-2"></i></button>
                            <button class="btn btn-sm btn-link" title="Remove bookmark" data-toggle="modal" data-target="#bookmarkDeleteModal-<%=post._id%>"><i class="fas fa-bookmark text-danger"></i></i></button>
                            
                            <%-include("../../confirmDeleteModals/bookmark")%>

                        </div>
                    </div>
                </div>
            </div>
        <hr class="my-2 mx-3"> 
        <% } } %> 
</div>