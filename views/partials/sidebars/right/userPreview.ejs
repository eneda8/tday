<div class="container d-flex justify-content-center align-items-center px-0">
    <div class="card rounded border-0 shadow-sm bg-light w-100">
        <% if(user.coverPhoto) { %> 
        <!-- <div class="upper" style="background-image: url('<%=user.coverPhoto.profile%>');"></div> -->
        <img class="card-img-top" src="<%=user.coverPhoto.profile" alt="">
        <% } else { %> 
        <div class="upper" style="background-color: <%=user.coverColor%>;"></div>
        <% } %> 
        <div class="user text-center">
            <div class="profile"> <img src="<%=user.avatar.profile%>" class="rounded-circle"></div>
        </div>
        <div class="mt-5 text-center">
            <h4 class="mb-0 font-weight-light"><%=user.displayName%></h4>
            <span class="d-block">@<%=user.username%></span>
            <span class="text-muted d-block mb-2">
                <img class="mr-1" title="<%=user.country.name %>" src="<%=user.country.flag%>" width="17px"><%=user.country.name %>
            </span> 
            <div class="d-flex justify-content-around align-items-center mt-4 mb-2 px-1">
                <div class="stats">
                    <h5 class=" mb-0 d-block"><%=user.posts.length%></h5><small class="text-muted">Ratings</small>
                </div>
                <div class="stats">
                    <h5 class="mb-0 d-block"><%=user.comments.length%></h5><small class="text-muted">Comments</small>
                </div>
                <div class="stats">
                    <h5 class="mb-0 d-block"><%=user.postStreak%></h5><small class="text-muted">Streak</small>
                </div>
                <div class="stats">
                    <h5 class="mb-0 d-block"><%=user.average%></h5><small class="text-muted">Avg. Rating</small>
                </div>
            </div>
        </div>
    </div>
</div>

 
