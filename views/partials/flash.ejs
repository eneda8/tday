<% if(success && success.length) {%>
    <div class="alert alert-light alert-dismissible fade show rounded border-success shadow my-0 bg-light" role="alert">
        <div class="mr-5">
            <%= success %>
        </div>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } %>
    
    <% if(error && error.length) {%>
    <div class="alert alert-light alert-dismissible fade show rounded border-danger shadow my-0 bg-light" role="alert">
        <div class="mr-5"><%= error %></div>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } %>

<style>
    .alert{
        width: fit-content;
        padding: 15px;
        border-left: 6px solid #7f7f84;
    }
</style>