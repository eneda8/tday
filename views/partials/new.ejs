<div class="modal fade" id="newPostModal" tabindex="-1" aria-labelledby="newPostModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="newPostModalLabel">New Rating</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/posts" method="POST" novalidate class="mb-3 validated-form" enctype="multipart/form-data">
            <div>
                <h6 class="">How was your day?</h6>

                <label class="form-label mb-3"for="post[rating]"></label>
                <fieldset class="rating">
                  <input type="radio" id="star5" name="post[rating]" value=5 required/><label class = "" for="star5" title="Amazing"></label>
                  <input type="radio" id="star4" name="post[rating]" value=4 required/><label class = "" for="star4" title="Very good"></label>
                  <input type="radio" id="star3" name="post[rating]" value=3 required/><label class = "" for="star3" title="Average"></label>
                  <input type="radio" id="star2" name="post[rating]" value=2 required/><label class = "" for="star2" title="Not good"></label>
                  <input type="radio" id="star1" name="post[rating]" value=1 required/><label class = "" for="star1" title="Terrible"></label>
              </fieldset>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">This field is required.</div>
            </div>
            <div class="mb-3 mt-0">
                <label class="form-label mt-0" for="body">Jot down your thoughts or post an image:</label>
                <textarea class="form-control" rows="5"cols="10" type="text" name="post[body]"></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="image" name="image" onchange="document.getElementById('preview').src = window.URL.createObjectURL(this.files[0])">
                <label class="custom-file-label" for="image">Choose image...</label>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <img class="img-fluid my-2" id="preview" width="100px"/> 
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>